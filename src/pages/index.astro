---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';
import TypedHero from '../components/TypedHero.astro';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-dark-bg text-slate-200">
		<Header />
		<main class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
			<!-- Hero Section -->
			<TypedHero />

			<!-- Blog Showcase -->
			<section class="py-8">
				<h2 class="text-3xl font-bold tracking-tight text-slate-100 sm:text-4xl text-center mb-12 text-red-500">
					Recent Blog Posts
				</h2>
				<ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
					{
						posts.map((post) => (
							<li class="transform transition-transform duration-300 hover:scale-105">
								<a href={`/blog/${post.slug}/`} class="block rounded-lg overflow-hidden bg-dark-card border-2 border-transparent hover:border-accent-green transition-colors duration-300">
									{post.data.heroImage && (
										<Image
											width={720}
											height={360}
											src={post.data.heroImage}
											alt=""
											class="w-full h-auto object-cover"
										/>
									)}
									<div class="p-6">
										<h4 class="text-2xl font-bold mb-2 text-slate-100">
											{post.data.title}
										</h4>
										<p class="text-slate-400">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>

			<!-- Contact Section -->
			<section class="text-center py-20">
				<h2 class="text-3xl font-bold tracking-tight text-slate-100 sm:text-4xl mb-6">
					Get in Touch
				</h2>
				<div class="flex justify-center space-x-6">
					<a href="https://github.com/AyushmanMalla" target="_blank" rel="noopener noreferrer" class="text-slate-400 hover:text-accent-green">
						GitHub
					</a>
					<a href="https://www.linkedin.com/in/ayushman-malla-952900229/" target="_blank" rel="noopener noreferrer" class="text-slate-400 hover:text-accent-green">
						LinkedIn
					</a>
					<a href="mailto:ayushman.malla@e.ntu.edu.sg" class="text-slate-400 hover:text-accent-green">
						Email
					</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>